    <title>Old Skool Labs</title>

    <style>
        * {
            box-sizing: border-box;
        }

        :root {
            --primary-color: black;
            --secondary-color: white;
            --third-color: white;
            --fourth-color: rgba(0, 0, 0, 0.5);
            --outro: black;
        }

        .dark-theme {
            --primary-color: white;
            --secondary-color: black;
            --third-color: #232121;
            --fourth-color: rgba(255, 255, 255, 0.5);
            --outro: #555555;
        }

        body {
            background-color: var(--secondary-color);
            margin: 0;
        }

        header {
            background: linear-gradient(to right, rgba(255, 106, 23, 0.3), rgba(82, 75, 227, 0.4), rgba(82, 75, 227, 0.6), white);
            display: flex;
            flex-direction: column;
            padding: 14px 56px;
        }

        header nav {
            display: flex;
            gap: 67.5px;
        }

        header ul {
            list-style: none;
            color: white;
        }

        header ul a {
            text-decoration: none;
            color: white;
        }

        header nav div {
            display: flex;
            gap: 4px;
            align-items: center;
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 18px;
        }

        header nav a {
            display: flex;
            gap: 4px;
            align-items: center;
            text-decoration: none;
            color: black;
        }

        header>div:first-child {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header>div:last-child,
        .ham-menu {
            display: none;
        }

        header>div:last-child.active {
            display: block;
            transition: .3s all;
        }

        .ham-menu {
            cursor: pointer;
            height: 50px;
            width: 40px;
            margin-left: auto;
            position: relative;
        }

        .ham-menu span {
            height: 5px;
            width: 100%;
            border-radius: 25px;
            background-color: black;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            transition: .3s ease;
        }

        .ham-menu span:nth-child(1) {
            background-color: rgba(255, 105, 21, 1);
            top: 25%;
        }

        .ham-menu span:nth-child(3) {
            background-color: rgba(255, 105, 21, 1);
            top: 75%;
        }

        .ham-menu.active span {
            background-color: black;
        }

        .ham-menu.active span:nth-child(1) {
            top: 50%;
            transform: translate(-50%, -50%) rotate(45deg);
        }

        .ham-menu.active span:nth-child(2) {
            opacity: 0;
        }

        .ham-menu.active span:nth-child(3) {
            top: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
        }

        header>div:first-child>div:last-child {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 30px;
        }

        header>div:first-child>div:last-child button {
            cursor: pointer;
            background-color: transparent;
            border: none;
            outline: none;
            font-family: 'Instrument Sans', sans-serif;
        }

        header>div:first-child>div:last-child button:nth-child(2) {
            border-radius: 8px;
            padding: 10px 25px;
            color: white;
            font-weight: bold;
            background: rgba(255, 105, 21, 1);
            font-size: 18px;
        }

        header>div:first-child>div:last-child button:first-child img {
            width: 30px;
        }

        main {
            background-color: #1F1F1F;
            padding: 83px 103px;
            display: flex;
            gap: 99px;
            align-items: center;
            justify-content: center;
        }

        main>div {
            display: flex;
            flex-direction: column;
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        main h3,
        h4 {
            font-size: 3rem;
            font-weight: 400;
            margin: 0 0 20px;
        }

        main h4 {
            font-size: 2rem;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 90px;
        }

        main form {
            background-color: white;
            padding: 60px 90px;
            color: #666666;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            border-radius: 2rem;
        }

        main form h2 {
            font-size: 2rem;
            font-weight: 400;
            color: #333333;
        }

        main form>div {
            display: flex;
            flex-direction: column;
        }

        main form>div:nth-of-type(1) {
            flex-direction: row;
            gap: 16.5px;
        }

        main form>div>div {
            display: flex;
            flex-direction: column;
            gap: 6px;
            width: calc(100% - 8.25px);
        }

        main form input {
            height: 55px;
            border: 1px rgba(102, 102, 102, 0.35) solid;
            border-radius: 10px;
        }

        main form textarea {
            border: 1px rgba(102, 102, 102, 0.35) solid;
            border-radius: 10px;
        }

        button[type="submit"] {
            display: block;
            width: 30%;
            padding: 10px;
            background-color: hsla(18.29268293, 82%, 60.78431373%, 1);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            margin-left: 35%;
            transition: all 0.3s;
        }

        button[type="submit"]:hover {
            transform: scale(1.25);
        }


        /* Footer */
        footer {
            background: black;
            padding: 2rem 7rem;
            color: #9A9EA6;
            font-family: 'Plus Jakarta Sans', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .subfooter {
            display: flex;
            justify-content: space-between;
            margin-bottom: 4rem;
        }

        .subfooter>div {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .subfooter>div:first-child {
            max-width: 483px;
        }

        .subfooter>div:first-child>div:first-child {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .subfooter img {
            width: 4rem;
        }

        .subfooter .contact {
            margin-top: 1rem;
            display: flex;
            gap: 20px;
            flex-direction: column;
        }

        .subfooter .contact span {
            display: flex;
            gap: 6px;
            align-items: center;
        }

        .subfooter>div:last-child {
            display: flex;
            justify-content: space-between;
            gap: 100px;
            flex-direction: row;
        }

        .subfooter>div:last-child>div {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .subfooter .heading {
            font-size: 18px;
            font-weight: bold;
            color: white;
            margin-bottom: 0.25rem;
        }

        footer .ending {
            display: flex;
            justify-content: space-between;
            flex-direction: row;
            font-size: 14px;
        }

        footer .ending div {
            display: flex;
            gap: 2.5rem;
        }


        @media (max-width: 1082px) {

            header nav {
                display: none;
            }

            .ham-menu {
                display: block;
            }

            header>div:last-child ul {
                display: flex;
                flex-direction: column;
                align-items: center;
                font-family: 'Plus Jakarta Sans', sans-serif;
                font-size: 18px;
            }

            main {
                flex-direction: column;
            }

            footer {
                padding: 3rem 4px;
            }

            .subfooter {
                justify-content: center;
            }

            .subfooter>div {
                gap: 2.5rem;
                align-items: center;
            }

            .subfooter>div:first-child>div:first-child {
