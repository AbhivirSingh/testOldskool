                gap: 2rem;
                position: relative;
                align-items: center;
            }

            .subfooter>div:first-child>div:first-child span {
                height: min-content;
            }

            .subfooter>div>span {
                font-size: 14px;
            }

            .subfooter .contact {
                margin-top: 0;
                font-size: 14px;
                gap: 1rem;
            }

            .subfooter .contact span {
                display: flex;
                gap: 6px;
                align-items: center;
            }

            .subfooter>div:last-child {
                display: none;
            }

            footer .ending {
                flex-direction: column-reverse;
                gap: 2rem;
                text-align: center;
            }

            footer .ending div {
                justify-content: center;
                font-size: 12px;
                gap: 0.5rem;
            }
        }

        @media (max-width: 862px) {

            header>div:first-child>div:last-child {
                gap: 10px;
            }

            header>div:first-child>div:last-child button:first-child img {
                width: 20px;
            }

            header>div:first-child>div:last-child button:nth-child(2) {
                border-radius: 8px;
                padding: 5px 12px;
                font-size: 12px;
            }

            .ham-menu {
                height: 30px;
                width: 20px;
            }

            .ham-menu span {
                height: 2px;
                border-radius: 10px;
            }

        }

        @media (max-width: 600px) {
            main {
                padding: 3rem 0 0;
            }

            main form {
                padding: 2rem 1rem;
                font-size: 0.75rem;
                width: 90vw;
                border-radius: 0;
            }

            main form h2 {
                font-size: 1.5rem;
            }

            main form>div:nth-of-type(1) {
                flex-direction: column;
            }

            main form>div>div {
                width: auto;
            }

            main form input {
                height: 2.25rem;
            }

            button[type="submit"] {
                font-size: 0.75rem;
            }
        }

        @media (max-width: 420px) {

            header {
                padding: 23px 22px 24px 0;
            }

            header nav {
                display: none;
            }

            header>div:last-child {
                display: none;
            }

            main h3 {
                font-size: 2rem;
            }

            main h4 {
                font-size: 1.25rem;
            }

            main>div img {
                width: 200px;
                height: 250px;
            }

            footer {
                padding: 3rem 4px;
            }

            .subfooter>div {
                gap: 2.5rem;
            }

            .subfooter>div:first-child>div:first-child {
                flex-direction: row;
                gap: 2rem;
                position: relative;
                align-items: center;
            }

            .subfooter>div:first-child>div:first-child span {
